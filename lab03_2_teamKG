FROM nginx:mainline-alpine

COPY ./html /usr/share/nginx/html
RUN sed -i "s/<p id=\"timestamp\">.*<\/p>/<p id=\"timestamp\">$(date)<\/p>/" /usr/share/nginx/html/index.html
EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]


